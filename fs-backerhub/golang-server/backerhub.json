{
  "app": {
    "name": "backerhub-golang-server",
    "port": 8080,
    "level": "development",
    "token": {
      "secret_key": "my-super-secret",
      "expires_at": "1h"
    },
    "clients": [
      "http://vuejs-server:3000",
      "http://localhost:3000",
      "http://127.0.0.1:3000"
    ]
  },
  "logging": {
    "level": "debug",
    "path": "logs/app.log",
    "format": "console",
    "output": "both",
    "caller": true
  },
  "postgres": {
    "host": "localhost",
    "port": 5432,
    "name": "backerhub",
    "username": "backeruser",
    "password": "backerpass",
    "ssl_mode": "disable",
    "time_zone": "Asia/Jakarta",
    "max_open_conns": 25,
    "max_idle_conns": 10,
    "conn_max_lifetime": "1h"
  },
  "mysql": {
    "host": "mysql",
    "port": 3306,
    "name": "backerhub",
    "username": "backeruser",
    "password": "backerpass",
    "max_open_conns": 25,
    "max_idle_conns": 10,
    "conn_max_lifetime": "1h"
  },
  "midtrans": {
    "server_key": "",
    "client_key": ""
  }
}
